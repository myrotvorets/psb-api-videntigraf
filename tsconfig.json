{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "outDir": "./dist",
        "rootDirs": ["src", "test"],
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "strict": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true,
        "transpileOnly": true
    },
    "compileOnSave": true
}
