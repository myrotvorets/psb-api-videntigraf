FROM myrotvorets/node:latest@sha256:2d0fcdb1f3730f1d82aa1d0757784438ec52e7f9dacb4dbc63217ba3a79962ca
USER root
WORKDIR /srv/service
RUN apk add --no-cache vips-dev
